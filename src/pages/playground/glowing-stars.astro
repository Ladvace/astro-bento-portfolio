---
import Layout from "../../layouts/Layout.astro";
import ArrayGlowComponent from "../../components/playground/arrayGlow";
---

<script>
  import { animate, type AnimationSequence } from "motion";
  import { loaderAnimation } from "../../lib/constants";

  animate([loaderAnimation] as AnimationSequence);
</script>

<Layout
  title="Gianmarco Cavallo - Playground - Glowing stars effect"
  description="Glowing stars effect"
  fullScreen="h-auto"
>
  <div class="flex flex-col px-4 pb-4 overscroll-none h-screen">
    <header class="sticky top-0 inset-x-0 z-60 p-4">
      <a
        href="/playground"
        class="text-white bg-neutral-900 hover:bg-neutral-800 w-fit px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg"
        >Back</a
      >
    </header>

    <div class="h-full flex justify-center items-center">
      <ArrayGlowComponent client:load />
    </div>
  </div>
</Layout>
