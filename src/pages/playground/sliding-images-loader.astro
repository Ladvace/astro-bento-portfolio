---
import Layout from "../../layouts/Layout.astro";
import SlidingImagesLoaderComponent from "../../components/playground/slidingImgesLoader";
---

<script>
  import { timeline, type TimelineDefinition } from "motion";
  import { loaderAnimation } from "../../lib/constants";

  timeline([loaderAnimation] as TimelineDefinition);
</script>

<Layout
  title="Gianmarco Cavallo - Playground - Sliding images loader"
  description="Cool sliding images initial loader"
>
  <div class="flex flex-col items-start h-screen w-screen p-4">
    <a
      href="/playground"
      class="absolute left-4 top-4 text-white bg-neutral-900 hover:bg-neutral-800 w-fit px-4 py-2 border-1 border-solid border-neutral-600 rounded-lg z-20"
      >Back</a
    >

    <div class="w-full h-full flex justify-center items-center">
      <SlidingImagesLoaderComponent client:load />
    </div>
  </div>
</Layout>
